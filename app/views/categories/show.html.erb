<%= render 'shared/errors', obj: @category %>
<%= render 'shared/messages' %>

<div class="blog-post">
  <h2 class="blog-post-title"><%= @category.name %></h2>
</div>

<% if current_user&.admin? %>
  <%= link_to 'Edit', edit_category_path(@category), class: "btn btn-primary" %>
  <%= link_to 'Delete', category_path(@category), method: :delete, class: "btn btn-danger", :data => {:confirm => "Are you sure you want to delete this category? This action can not be undone!"} %>
<% end %>
<%= link_to 'Back', categories_path, class: "btn btn-default" %>
<br/>
