<%= form_for(user) do |f| %>

  <%= render 'shared/errors', obj: user %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, placeholder: "Enter Email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :username %>
    <%= f.text_field :username, disabled: @user.persisted?, placeholder: "Enter Username", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter Password", class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit(@user.new_record? ? "Sign Up" : "Update account", class: "btn btn-primary") %>
    <%= link_to('Back', @user.new_record? ? root_path : user_path(@user), class: "btn btn-default") %>
  </div>
<% end %>
