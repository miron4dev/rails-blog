<%= render 'shared/errors', obj: @user %>
<%= render 'shared/messages' %>

<div class="container">
  <div class="row">
    <div class="col-sm-8 blog-main">
      <h3><%= @user.username %></h3>
      <span class="help-block"><%= @user.email %></span>
      <span class="help-block"><%= @user.admin? ? "Admin" : "User" %></span>
    </div>
  </div>

  <% if user_editable?(@user) %>
    <%= link_to 'Edit Profile', edit_user_path(@user), class: "btn btn-primary" %>
    <%= link_to 'Delete Profile', user_path(@user), method: :delete, class: "btn btn-danger", :data => {:confirm => "Are you sure you want to delete your profile? This action can not be undone!"} %>
  <% end %>

  <%= link_to 'Back', root_path, class: "btn btn-default" %>
</div>

