<h1>Login</h1>

<%= form_for(:session, url: login_path) do |f| %>

  <%= render 'shared/errors', obj: nil %>
  <%= render 'shared/messages' %>

  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, placeholder: "Enter Email", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, placeholder: "Enter Password", class: "form-control", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit("Login", class: "btn btn-primary") %>
  </div>
<% end %>
