<p id="notice"><%= notice %></p>

<% @articles.each do |article| %>

  <div class="blog-post">
    <h2 class="blog-post-title"><%= link_to article.title, article %></h2>

    <p class="blog-post-meta"><%= article.created_at.to_formatted_s(:long) %> by <a href="#">admin</a></p>

    <p><%= article.description %></p>
  </div>
<% end %>

<nav>
  <ul class="pager">
    <li><a href="#">Previous</a></li>
    <li><a href="#">Next</a></li>
  </ul>
</nav>
