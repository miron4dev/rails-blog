<%= render 'shared/errors', obj: @article %>
<%= render 'shared/messages' %>

<div>
  <%= render 'articles/article', article: @article %>

  <% if article_editable?(@article) %>
    <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-primary" %>
    <%= link_to 'Delete', article_path(@article), method: :delete, class: "btn btn-danger", :data => {:confirm => "Are you sure you want to delete this article? This action can not be undone!"} %>
  <% end %>
  <%= link_to 'Back', :back, class: "btn btn-default" %>
</div>
<br/>
